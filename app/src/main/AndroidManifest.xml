<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.getsett.spotifyalarm" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AlarmEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>

        <receiver
            android:name=".AlarmBroadcastReceiver"
            android:process=":remote" />

        <activity
            android:name=".AlarmListActivity"
            android:label="@string/title_activity_alarm_list" >
        </activity>
        <activity
            android:name=".SleepActivity"
            android:label="@string/title_activity_sleep" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GoToSleepActivity"
            android:label="@string/title_activity_go_to_sleep" >
        </activity>
        <!-- Spotify Login -->
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <service
            android:name=".SunsetService"
            android:exported="false" >
        </service>
        <service
            android:name=".SunriseService"
            android:exported="false" >
        </service>
    </application>

</manifest>
